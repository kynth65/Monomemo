{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksConfig": {
            "providers": ["php", "node"],
            "phases": {
                "setup": {
                    "nixPkgs": ["php82", "nodejs-20_x", "composer"]
                },
                "install": {
                    "cmds": ["npm install", "composer install --no-dev --optimize-autoloader"]
                },
                "build": {
                    "cmds": ["npm run build"]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "php artisan serve --host 0.0.0.0 --port {{port}}",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "releaseCommand": "php artisan migrate --force"
    }
}
